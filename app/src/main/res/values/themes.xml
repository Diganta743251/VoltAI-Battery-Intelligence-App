<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.VoltAISmartBatteryGuardian" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    
    <style name="Theme.VoltAISmartBatteryGuardian.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/voltai_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.VoltAISmartBatteryGuardian</item>
    </style>
</resources>